{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": ["src/stories"],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
